<resources>
    <style name="Theme.JobSearchApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Основные цвета -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryVariant">@color/gray1</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/blue</item>
        <item name="colorOnSecondary">@color/white</item>

        <!-- Цвета для фона и текста -->
        <item name="android:colorBackground">@color/black</item>
        <item name="android:textColor">@color/white</item>
        <item name="colorSurface">@color/gray1</item>
        <item name="colorOnSurface">@color/white</item>

        <!-- Цвет статус-бара -->
        <item name="android:statusBarColor">@color/black</item>
        <!-- Тёмный текст для статус-бара отключаем -->
        <item name="android:windowLightStatusBar">false</item>
    </style>
</resources>
